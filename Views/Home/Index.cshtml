@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<h3>Search By Keyword</h3>
<form asp-action="SearchbyKeyword">
    <p>Keyword</p>

    <input name="keyword" type="text" required />
    <br />

    <input type="submit" />
</form>



<h2>Search A Movie By Title</h2>
<form asp-action="MovieSearch">
    <p>Title</p>

    <input name="title" type="text" required />
    <br />

    <input type="submit" />
</form>




<form asp-action="MovieNight">
    <h2>Enter Three Titles To Compare</h2>

    <p>Title 1</p>
    <input name="title1" type="text" required />
    <br />
    <p>Title 2</p>
    <input name="title2" type="text" required />
    <br />
    <p>Title 3</p>
    <input name="title3" type="text" required />
    <br />

    <input type="submit" />
</form>
